<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="action_project_report_materials" model="ir.actions.report">
       <field name="name">Reporte de materiales</field>
       <field name="model">construction.project</field>
       <field name="report_type">qweb-pdf</field>
       <field name="report_name">construction.materials_report</field>
       <field name="report_file">construction.materials_report</field>
       <field name="print_report_name">'Proyecto - %s' % (object.name)</field>
       <field name="binding_model_id" ref="model_construction_project"/>
    </record>

    <template id="materials_report">
    <t t-call="web.html_container">
    <t t-call="web.external_layout">
        <div class="page">
            <table class="col-12">
                <thead>
                    <tr>
                        <th colspan="6" class="text-center" style="border: solid 1px black; background-color: cornflowerblue;">Reporte de Materiales</th>
                    </tr>
                    <tr>
                        <th style="border: solid 1px black; padding-left: 3px; padding-right: 3px;  background-color: cornflowerblue;" class="text-left">CÃ³digo</th>
                        <th style="border: solid 1px black; padding-left: 3px; padding-right: 3px;  background-color: cornflowerblue;" class="text-left">Nombre</th>
                        <th style="border: solid 1px black; padding-left: 3px; padding-right: 3px;  background-color: cornflowerblue;" class="text-left">Unidad</th>
                        <th style="border: solid 1px black; padding-left: 3px; padding-right: 3px;  background-color: cornflowerblue;" class="text-right">Precio</th>
                        <th style="border: solid 1px black; padding-left: 3px; padding-right: 3px;  background-color: cornflowerblue;" class="text-right">Cantidad</th>
                        <th style="border: solid 1px black; padding-left: 3px; padding-right: 3px;  background-color: cornflowerblue;" class="text-right">Importe</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-set="total_materials" t-value="0"/>
                    <t t-foreach="materials" t-as="material">
                    <tr>
                        <td style="border: solid 1px black; padding-left: 3px; padding-right: 3px;" class="text-left"><t t-esc="material['code']"></t></td>
                        <td style="border: solid 1px black; padding-left: 3px; padding-right: 3px;" class="text-left"><t t-esc="material['name']"></t></td>
                        <td style="border: solid 1px black; padding-left: 3px; padding-right: 3px;" class="text-left"><t t-esc="material['unit']"></t></td>
                        <td style="border: solid 1px black; padding-left: 3px; padding-right: 3px;" class="text-right">$ <t t-esc="material['cost']"></t></td>
                        <td style="border: solid 1px black; padding-left: 3px; padding-right: 3px;" class="text-right"><t t-esc="material['quantity']"></t></td>
                        <td style="border: solid 1px black; padding-left: 3px; padding-right: 3px;" class="text-right">$ <t t-esc="material['import']"></t></td>              
                    </tr>
                    <t t-set="total_materials" t-value="total_materials+material['import']"/>
                    </t>
                    <tr>
                        <th colspan="5" class="text-right" style="border-left: solid 1px black; padding-left: 3px; padding-right: 3px; background-color: whitesmoke;">Total Materiales:</th>
                        <th colspan="1" class="text-right" style="border-right: solid 1px black; padding-left: 3px; padding-right: 3px; background-color: whitesmoke;">$ <t t-esc="total_materials"></t></th>
                    </tr>
                </tbody>
            </table>
        </div>
    </t>
    </t>
    </template>
    </data>
</odoo>