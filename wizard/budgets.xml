<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- budget form -->
    <record model="ir.ui.view" id="budget_form_view">
        <field name="name">budget.form</field>
        <field name="model">construction.budgets_wizard</field>
        <field name="arch" type="xml">
            <form string="Worker form">
                <div class="col-12">
                    <div class="budget_widget_container">
                    </div>
                </div>
                <footer>
                    <button string="show data" name="show_data" type="object" />
                    <button string="Cancel" special="cancel" class="btn btn-secondary" />
                </footer>
            </form>
        </field>
    </record>
</odoo>